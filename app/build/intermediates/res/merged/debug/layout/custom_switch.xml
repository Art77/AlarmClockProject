<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/custom_switch_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_touch_selector"
        android:textAlignment="center" >


        <CheckBox
            android:id="@+id/custom_switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="52sp"/>

        <TextView
            android:id="@+id/custom_switch_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/custom_switch_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="default" />

    </RelativeLayout>
    
</merge>
